#!/usr/bin/make -f

override_dh_auto_install:
	dh_auto_install

	mkdir -p $(CURDIR)/debian/homegear/etc/homegear/devices/1
	cp $(CURDIR)/misc/Device\ Description\ Files/* $(CURDIR)/debian/homegear/etc/homegear/devices/1
	chmod 755 $(CURDIR)/debian/homegear/etc/homegear/devices/1
	chmod 644 $(CURDIR)/debian/homegear/etc/homegear/devices/1/*

override_dh_strip:
	dh_strip --dbg-package=homegear-homematicwired

%:
	dh $@ --parallel
